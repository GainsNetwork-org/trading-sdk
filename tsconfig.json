{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib/",
    "rootDir": "./src",
    "noImplicitAny": false,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
